        <!-- Lista kategorii -->
        <div class="mb-12 p-6 bg-base-200 rounded-lg shadow-md text-center">
            <h2 class="text-3xl font-semibold mb-4">Bloki tematyczne</h2>
            <div class="flex flex-wrap gap-4 justify-center">
                {% for category in categories %}
                    <div class="badge badge-outline rounded-b badge-lg p-3 hover:badge-accent hover:badge-outline">
                        <a href="" class="text-lg p-2">{{ category.name }}</a>
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Najnowsze Artykuły -->
        <div class="mb-12 p-6 bg-base-200 rounded-lg shadow-md">
            <h2 class="text-3xl font-semibold mb-4">Aktualności</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for article in articles %}
                    <div class="card shadow-lg hover:shadow-2xl transition-shadow duration-300">
                        <figure class="relative">
                            <img src="{{ article.image }}" alt="{{ article.title }}" class="w-full h-48 object-cover rounded-t-lg">
                            <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent rounded-t-lg"></div>
                            <div class="absolute bottom-2 left-2 text-white text-xl font-bold">{{ article.title }}</div>
                        </figure>
                        <div class="card-body p-4">
                            <p class="text-gray-700 mb-4">{{ article.excerpt }}</p>
                            <div class="card-actions justify-end">
                                <a href="" class="btn btn-outline btn-sm">
                                    Czytaj więcej
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

